package session3.Exercise4;

public class Person {
    /* The final keyword prevents fields from being modified after initilisation. 
    The fields cannott be accessed/modified with setters*/

    private final String name; 
    private final int age;

    // Constructor
    Person(String name, int age){
        this.name = name;
        this.age = age;
    }

    public String getName(){
        return name;
    }

    public int getAge(){
        return age;
    }

    // The setter method doesnt work because 'age' is final
    // public void setAge(int age){
    //     this.age = age;
    // }

}
